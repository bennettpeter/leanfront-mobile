<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.schedule.ScheduleFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Row with two groups-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Left group-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <!--Call Sign-->
                <TextView
                    android:id="@+id/call_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!--Time-->
                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!--Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_title"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!--Subtitle-->
                <TextView
                    android:id="@+id/subtitle_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_subtitle"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!--Description-->
                <TextView
                    android:id="@+id/description_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_description"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="false"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!--Season & Episode-->
                <TextView
                    android:id="@+id/season_episode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:paddingBottom="6sp"
                    android:textSize="15sp" />
                <!--Start Offset-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_start_offset"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/start_offset"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text|numberSigned"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:text="0"
                    android:textSize="15sp" />
                <!--End Offset-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_end_offset"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/end_offset"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text|numberSigned"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:text="0"
                    android:textSize="15sp" />
                <!--New Episodes Only-->
                <CheckBox
                    android:id="@+id/new_epis_only"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="@string/sched_new_only"
                    android:textSize="15sp" />
                <!--Priority-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_priority"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/rec_priority"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text|numberSigned"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:text="0"
                    android:textSize="15sp" />
                <!--Post Processing-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_pp_title"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <org.mythtv.lfmobile.ui.MultiSpinner
                    android:id="@+id/post_proc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Metadata Lookup Id-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_metadata_id"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/inetref"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!--Phrase to use in Search-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_metadata_search_name"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/search_phrase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:textSize="15sp" />
                <!-- Search TVDB -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/search_tvdb_bn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tvdb_logo"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tvdb_logo"
                        app:tint="@color/black"
                        app:tintMode="add"
                        android:backgroundTint="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:id="@+id/search_tvdb_bn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tvdb_bn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvdb_logo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tvdb_desc"
                        app:layout_constraintTop_toBottomOf="@id/search_tvdb_bn_txt"
                        app:layout_constraintStart_toEndOf="@id/tvdb_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="12sp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- Search TVMaze -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/search_tvmaze_bn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tvmaze_logo"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tvmaze_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:paddingTop="20dp"
                        android:id="@+id/search_tvmaze_bn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tvmaze_bn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvmaze_logo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tvmaze_desc"
                        app:layout_constraintTop_toBottomOf="@id/search_tvmaze_bn_txt"
                        app:layout_constraintStart_toEndOf="@id/tvmaze_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="12sp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- Search TV series on TMDB -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/search_tmdb_tv_bn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tmdb_tv_logo"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tmdb_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:paddingTop="20dp"
                        android:id="@+id/search_tmdb_tv_bn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tv_bn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tmdb_tv_logo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tmdb_desc"
                        app:layout_constraintTop_toBottomOf="@id/search_tmdb_tv_bn_txt"
                        app:layout_constraintStart_toEndOf="@id/tmdb_tv_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="12sp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- Search Movies on TMDB -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/search_tmdb_mv_bn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tmdb_mv_logo"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tmdb_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:paddingTop="20dp"
                        android:id="@+id/search_tmdb_mv_bn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_movie_bn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tmdb_mv_logo"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="6sp"
                        android:text="@string/sched_metadata_search_tmdb_desc"
                        app:layout_constraintTop_toBottomOf="@id/search_tmdb_mv_bn_txt"
                        app:layout_constraintStart_toEndOf="@id/tmdb_mv_logo"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="12sp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <!--Vertical Line-->
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@drawable/horz_divider"/>
            <!--Right Group-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <!--Template-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_use_template"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Search Type-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_search_type"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/search_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Channel-->
                <TextView
                    android:id="@+id/channel_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_channel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
                <Spinner
                    android:id="@+id/channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:visibility="gone"/>
                <!--Date and Time -->
                <TextView
                    android:id="@+id/dttime_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_dttime"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/dttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:textSize="16sp"
                    android:visibility="gone"/>
                <!--Duration-->
                <TextView
                    android:id="@+id/duration_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_duration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/duration"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text|number"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:text="60"
                    android:textSize="15sp"
                    android:visibility="gone"/>
                <!--Schedule Type-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="Schedule Type"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/schedule_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Recording Group-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_rec_group"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/recording_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Active-->
                <CheckBox
                    android:id="@+id/active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="@string/sched_active_msg"
                    android:textSize="15sp" />
                <!--Playback Group-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_play_group"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/playback_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Preferred Input-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_input"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/preferred_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Dup Method-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_dupmethod"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/dup_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Dup Scope-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_dupscope"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/dup_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Auto Extend-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_autoextend"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/auto_extend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Filters-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_filters"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <org.mythtv.lfmobile.ui.MultiSpinner
                    android:id="@+id/selected_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Recording Profile-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_rec_profile"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/rec_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Storage Group-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_storage_grp"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/storage_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6sp" />
                <!--Deletion on max (max newest)-->
                <CheckBox
                    android:id="@+id/max_newest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="@string/sched_max_newest"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingBottom="12sp"
                    android:text="@string/sched_max_newest_note"
                    android:textSize="12sp" />
                <!--Max Episodes-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6sp"
                    android:paddingTop="12sp"
                    android:text="@string/sched_max_to_keep"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/max_episodes"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12sp"
                    android:focusable="true"
                    android:inputType="text|number"
                    android:maxLines="1"
                    android:padding="6sp"
                    android:text="0"
                    android:textSize="15sp" />
                <!--Auto Expire-->
                <CheckBox
                    android:id="@+id/auto_expire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="@string/sched_auto_expire"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <!--Buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <Button
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:text="@string/close" />
            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:text="@string/save" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>